<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/light_startColor"
                android:centerColor="@color/light_centerColor"
                android:endColor="@color/light_endColor"
                android:angle="45"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item
        android:left="0.5dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0.5dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/dark_startColor"
                android:centerColor="@color/dark_centerColor"
                android:endColor="@color/dark_endColor"
                android:angle="45"/>
            <corners android:radius="10dp" />
            <stroke
                android:width="0.5dp"
                android:color="@color/dark_centerColor" />
        </shape>
    </item>
</layer-list>