<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:id="@+id/edit_linear"
        android:background="@drawable/con_edittext_design2"
        >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_value"
        android:id="@+id/edittext"
        android:background="@drawable/con_edittext_design2"
        android:inputType="numberDecimal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="60dp"

        />

        <TextView
            android:layout_marginLeft="-106dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/clear"
            android:text="Clear"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textColor="@color/main_white"
            android:gravity="center"
            android:background="@drawable/con_button_design"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spinner"
            android:paddingLeft="3dp"
            android:textAlignment="center"
            style="@style/spinner_style"
            android:entries="@array/input_arrays"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="To"
        android:inputType="numberDecimal"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tospinner"
            android:paddingLeft="3dp"
            android:textAlignment="center"
            style="@style/spinner_style"
            android:entries="@array/input_arrays"
            />
    </LinearLayout>


       <Button

           android:layout_width="match_parent"
           android:layout_gravity="center"
           android:layout_height="wrap_content"
           android:id="@+id/button"
           android:layout_margin="10dp"
           android:text="@string/Calculate"
           android:textColor="@color/main_white"
           android:textStyle="bold"
           android:textSize="20sp"
           android:background="@drawable/con_button_design_converter"

        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    android:background="@drawable/con_text_view_design"
    android:orientation="horizontal"
    android:id="@+id/converted_linear"
    android:visibility="gone"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/ConvertedValue"
        />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unit"
        android:gravity="center"
        android:textSize="15sp"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:id="@+id/other_units"
        >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableLeft="@drawable/con_ic_arrow_drop_down"
    android:text="Other Units"
    android:textColor="#fff"
    android:id="@+id/otherunits"
    android:gravity="center_vertical"
    android:textSize="20sp"
    />

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linother"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >

        <ListView android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1000FF00"
            android:layout_weight="1"
            android:drawSelectorOnTop="false"/>

        <TextView android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#10FF0000"
            android:text="No data"/>
    </LinearLayout>


</LinearLayout>
