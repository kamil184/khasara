    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="spin_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog_style" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#FF9800</item>
        <item name="android:textColor">#4C0057</item>
        <item name="colorAccent">#4C0057</item>
        <item name="colorControlNormal">#82CC84</item>
        <item name="android:textColorAlertDialogListItem">#F44336</item>
